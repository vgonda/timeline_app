<%= form_for @event do |form| %>
  <% if @event.errors.any? %>
    <% @event.errors.full_messages.each do |message| %>
      <%= message %>
    <% end %>
  <% end %>

  <%= form.label :message %>
  <%= form.text_field :message %>

  <%= form.label :relevence %>
  <%= form.number_field :relevence %>

  <%= submit_tag "Save" %>
<% end %>
